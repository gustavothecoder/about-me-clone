<section class="signup-form-area m-auto">
  <div class="progress" style="height: 6px">
    <div class="progress-bar" style="width: 60%" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <header class="d-flex flex-column align-items-center pt-5">
    <%= image_tag 'click_icon.svg', size: '27x27' %>
    <h2 class="step-description pt-1"><%= @reason&.name %></h2>
  </header>
  <%= form_with url: users_registrations_path, class: 'd-flex flex-column align-items-center justify-content-between' do |f| %>
    <input type="hidden" name="step" value="8" />
    <p class="signup-instructions-two">Enter a link to your <%= @reason&.keywords %>.</p>
    <%= f.text_field :website, placeholder: 'example.com', required: true, class: 'centralize-input w-100 mt-0 py-3 form-control' %>
    <%= f.submit 'Next >', class: 'next-step-button btn w-100' %>
  <% end %>
</section>
