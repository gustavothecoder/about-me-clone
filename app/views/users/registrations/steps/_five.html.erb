<section class="signup-form-area big-signup-form-area m-auto">
  <div class="progress" style="height: 6px">
    <div class="progress-bar" style="width: 40%" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <header class="d-flex flex-column align-items-center pt-5">
    <%= image_tag 'suitcase_icon.svg', size: '25x25' %>
    <h2 class="step-description pt-1">What do you do?</h2>
  </header>
  <%= form_with url: users_registrations_path, class: 'big-form d-flex flex-column align-items-center justify-content-between' do |f| %>
    <input type="hidden" name="step" value="6" />
    <input type="hidden" name="items_type" value="occupations" />
    <p class="signup-instructions signup-instructions-two">Choice of one to three occupations/hobbies.</p>
    <ul class="w-100 d-flex justify-content-center flex-wrap overflow-auto px-1">
      <%= selection_list_of(Occupation.all) %>
    </ul>
    <ul id="selected-items" class="w-100 d-flex justify-content-around px-1">
      <li class="selected-item increase-max-width select-button btn btn-outline-primary px-1"></li>
      <li class="selected-item increase-max-width select-button btn btn-outline-primary px-1"></li>
      <li class="selected-item increase-max-width select-button btn btn-outline-primary px-1"></li>
    </ul>
    <%= f.submit 'Next >', class: 'next-step-button btn w-75', disabled: true %>
  <% end %>
</section>
<%= javascript_pack_tag 'users/registrations/itemClickEvent' %>
