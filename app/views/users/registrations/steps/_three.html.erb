<section class="signup-form-area m-auto">
  <div class="progress" style="height: 6px">
    <div class="progress-bar" style="width: 20%" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <header class="d-flex flex-column align-items-center pt-5">
    <%= image_tag 'location_icon.svg', size: '25x25' %>
    <h2 class="step-description pt-1">Where you from?</h2>
  </header>
  <%= form_with url: users_registrations_path, class: 'd-flex flex-column align-items-center justify-content-between' do |f| %>
    <input type="hidden" name="step" value="4" />
    <%= f.text_field :location, placeholder: 'Enter your location', required: true, class: 'w-100 mt-4 py-3 form-control' %>
    <%= f.submit 'Next >', class: 'next-step-button btn w-100' %>
  <% end %>
</section>
