<section class="signup-form-area all-page top-zero m-auto">
  <div class="progress" style="height: 6px">
    <div class="progress-bar" style="width: 80%" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <header class="d-flex flex-column align-items-center pt-5">
    <%= image_tag 'layout_icon.svg', size: '25x25' %>
    <h2 class="step-description pt-1">Choose your design</h2>
  </header>
  <%= form_with url: users_registrations_path, class: 'd-flex flex-column align-items-center justify-content-between add-photo-signup-form-area' do |f| %>
    <input type="hidden" name="step" value="10" />
    <input type="hidden" name="layout" value="" />
    <input type="hidden" name="color" value="" />
    <div class="d-flex mt-4">
      <%= image_tag 'layout_one.png', class: 'layout-example pointer mx-3', value: 0 %>
      <%= image_tag 'layout_two.png', class: 'layout-example pointer mx-3', value: 1 %>
      <%= image_tag 'layout_three.png', class: 'layout-example pointer mx-3', value: 2 %>
    </div>
    <div class="d-flex mt-5">
      <div class="color-ball pointer blue mx-3" value=0 ></div>
      <div class="color-ball pointer pink mx-3" value=1 ></div>
      <div class="color-ball pointer purple mx-3" value=2 ></div>
      <div class="color-ball pointer orange mx-3" value=3 ></div>
      <div class="color-ball pointer green mx-3" value=4 ></div>
      <div class="color-ball pointer dark_gray mx-3" value=5 ></div>
    </div>
    <%= f.submit 'Next >', class: 'next-step-button btn position-bottom width-165', disabled: true %>
  <% end %>
</section>
<%= javascript_pack_tag 'users/registrations/layoutClickEvent' %>
