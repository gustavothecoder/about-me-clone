<section class="signup-form-area big-signup-form-area m-auto">
  <div class="progress" style="height: 6px">
    <div class="progress-bar" style="width: 50%" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <header class="d-flex flex-column align-items-center pt-5">
    <%= image_tag 'click_icon.svg', size: '27x27' %>
    <h2 class="step-description pt-1">What do you want people to do on your page?</h2>
  </header>
  <%= form_with url: '/next_signup_step/7', class: 'big-form d-flex flex-column align-items-center justify-content-between' do |f| %>
    <ul class="w-100 d-flex justify-content-center flex-wrap overflow-auto px-1">
      <%= selection_list_of(Reason.all) %>
    </ul>
    <ul id="selected-items" class="w-100 d-flex justify-content-around px-1">
      <li class="selected-item increase-max-width select-button btn btn-outline-primary px-1"></li>
    </ul>
    <%= f.submit 'Next >', class: 'next-step-button btn w-75', disabled: true %>
  <% end %>
</section>
